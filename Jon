import static org.junit.Assert.*;

//Tests by Jon Nicolas

import org.junit.Test;

public class SavingsAccoutTest {

	@Test
	public void testSavingsAccount() throws exception {
		SavingsAccount Save1 = new SavingsAccount(double initialBalance, String customerId, String description) {
			this.initialBalance = 0.0;
			this.customerId = "Jon";
			this.description = "Savings Account";
			double output1 = this.initialBalance;
			String output2 = this.customerId;
			String output3 = this.description;
		}
		assertEquals(0.0, output1);
		assertEquals("Jon", output2);
		assertEquals("Savings Account", output3);
	}
	
	@Test
	public void testAddInterestTransaction() throws exception {
		double rate = DEFAULT_INTEREST_RATE;
		assertEquals(2.0, rate);
	}

}

