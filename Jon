//Customer Tests by Jon Nicolas

import static org.junit.Assert.*;
import org.junit.Test;

public class CustomerTest {

	public void Customer (Bank bank, String lastName, String firstName) {
        this.bank = null;
        this.customerId = "";
        this.lastName = "";
        this.firstName = "";
    }
	
	Customer Cust1 = new Customer() {
		this.bank = null;
		this.customerId = "";
		this.lastName = "Nicolas";
		this.firstName = "Jon";
	}
	
	@Test
	public void testGetBank() throws exception {
		String output = Cust1.bank;
		assertEquals(null, output);
	}
	
	@Test
	public void testGetCustomerId() throws exception {
        String custId = "1";
        assertEquals("1", custId);
    }
	
	@Test
	public void testGetLastName() throws exception {
		String output = Cust1.getLastName();
		assertEquals("Nicolas", output);
	}
	
	@Test
	public void testGetFirstName() throws exception {
		String output = Cust1.getFirstName();
		assertEquals("Jon", output);
	}
	
	@Test
	public void testYtdFees() throws exception {
		double output = 0.0;
		assertEquals(0.0, output);
	}
	
	@Test
	public void testYtdInterest() throws exception {
		double output = 0.0;
		assertEquals(0.0, output);
	}
	
	@Test
	public void testSavingsAccout addSavingsAccount(double initBal, String description) throws exception {
		SavingsAccount output = new SavingsAccount(0.0, "Jon's account");
		assertEquals(0.0, "Jon's Account,", output);
	}
}

